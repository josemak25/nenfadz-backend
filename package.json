  },
  "keywords": [
    "user resource management"
  ],
  "author": "Amakiri Joseph Lucky & Blessing & Dennis",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/josemak25/nenfadz-backend/issues"
  },
  "homepage": "https://github.com/josemak25/nenfadz-backend#readme",
  "dependencies": {
    "bcrypt": "^3.0.8",
    "body-parser": "^1.19.0",
    "celebrate": "^11.0.1",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.21.2",
    "http-status": "^1.4.2",
    "jest": "^25.1.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.8.11",
    "path-parser": "^6.1.0",
    "util": "^0.12.1"
  },
  "jest": {
    "globals": {
      "__DEV__": true
    },
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/"
